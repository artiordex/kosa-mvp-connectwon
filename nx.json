{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "extends": "nx/presets/npm.json",

  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "!{projectRoot}/dist/**/*",
      "!{projectRoot}/build/**/*",
      "!{projectRoot}/.next/**/*"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/*.spec.ts",
      "!{projectRoot}/**/*.test.ts",
      "!{projectRoot}/playwright-report/**",
      "!{projectRoot}/coverage/**"
    ]
  },

  "targetDefaults": {
    "build": {
      "inputs": ["production", "^production"],
      "outputs": ["{projectRoot}/dist", "{projectRoot}/.next"],
      "cache": true
    },
    "dev": {
      "inputs": ["default"],
      "cache": false
    },
    "lint": {
      "inputs": ["default"],
      "cache": true
    },
    "test": {
      "inputs": ["default", "^default"],
      "cache": true
    },
    "e2e": {
      "inputs": ["default", "^production"],
      "cache": false
    }
  },

  "pluginsConfig": {
    "@nx/js": {},
    "@nx/web": {}
  }
}
