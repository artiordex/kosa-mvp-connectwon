{
  // 루트의 tsconfig.json 상속
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Next.js가 빌드 처리
    "noEmit": true,
    // Next.js JSX 처리
    "jsx": "preserve",
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
