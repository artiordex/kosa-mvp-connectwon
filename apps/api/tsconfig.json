  /**
   * Description : tsconfig.json - 📌 api 의 tsconfig.json 최소유지 (Express API)
   * Author : Shiwoo Min
   * Date : 2025-09-05
   */
{
  // 루트의 tsconfig.json 상속
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // ESM, CommonJS, NodeNext
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    // JS 파일 생성 필요시 true
    "noEmit": false,
    "outDir": "./dist",
    // DOM 타입 제외
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  }
}
