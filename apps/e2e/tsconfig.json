{
  /**
   * Description: E2E 테스트용 TypeScript 설정
   * Author: Shiwoo Min
   * Date: 2025-09-04
   * Purpose: Playwright 웹앱 테스트 환경
   */
  "compilerOptions": {
    // 프로젝트 기본 경로
    "baseUrl": ".",

    // 모듈 경로 별칭 설정
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"],
      "@fixtures/*": ["./fixtures/*"],
      "@utils/*": ["./utils/*"],
      "@pages/*": ["./pages/*"],
      "@components/*": ["./components/*"]
    },

    // 컴파일 출력 설정
    "outDir": "./dist",
    "rootDir": "./",

    // 모듈 시스템
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",

    // 타입 정의
    "types": ["node", "@playwright/test"],
    "lib": ["ES2022", "DOM"],

    // 컴파일 옵션
    "declaration": false,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": true,

    // JSON 모듈 지원
    "resolveJsonModule": true,

    // 디버깅 지원
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,

    // 파일 시스템 호환성
    "forceConsistentCasingInFileNames": true,

    // 엄격한 타입 검사
    "noImplicitAny": true,
    "strictPropertyInitialization": false,

    // 에러 처리
    "noEmitOnError": false
  },

  // 컴파일 포함 대상
  "include": [
    "tests/**/*.ts",
    "tests/**/*.spec.ts",
    "tests/**/*.test.ts",
    "src/**/*.ts",
    "fixtures/**/*.ts",
    "utils/**/*.ts",
    "pages/**/*.ts",
    "components/**/*.ts",
    "playwright.config.ts",
    "GlobalSetup.ts",
    "GlobalTeardown.ts"
  ],

  // 컴파일 제외 대상
  "exclude": [
    "node_modules",
    "dist",
    "test-results",
    "playwright-report"
  ]
}
