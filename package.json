{
  "name": "connectwon",
  "private": true,
  "version": "1.0.0",
  "description": "ConnectWon - 도전자들을 위한 예약 기반 생활 서비스",
  "type": "module",
  "author": "Shiwoo Min",
  "license": "MIT",
  "engines": {
    "node": ">=20.11.0",
    "pnpm": ">=10.7.0"
  },
  "engineStrict": true,
  "packageManager": "pnpm@10.7.0",
  "scripts": {
    "prepare": "husky install",
    "nx": "nx",
    "graph": "nx graph",
    "build": "nx run-many -t build",
    "dev": "nx run-many -t dev --parallel",
    "lint": "nx run-many -t lint --parallel",
    "test": "nx run-many -t test --parallel",
    "affected:lint": "nx affected -t lint --parallel",
    "affected:test": "nx affected -t test --parallel",
    "affected:build": "nx affected -t build --parallel",
    "e2e": "nx run e2e:test",
    "format": "prettier --write \"**/*.{ts,tsx,js,json}\"",
    "lint:fix": "eslint --ext .ts,.tsx . --fix",
    "commit": "cz"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "connect-redis": "^9.0.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "nx": "^21.4.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "redis": "^5.8.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@nx/eslint": "^21.4.1",
    "@nx/eslint-plugin": "^21.4.1",
    "@playwright/test": "^1.51.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "changesets": "^1.0.2",
    "commitizen": "^4.3.1",
    "concurrently": "^9.1.2",
    "cz-customizable": "^7.4.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "msw": "^2.7.4",
    "nx": "^21.4.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.0",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.3",
    "typescript": "^5.4.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.cjs"
    }
  }
}
