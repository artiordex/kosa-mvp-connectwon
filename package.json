{
  "name": "connectwon",
  "private": true,
  "version": "1.0.0",
  "description": "ConnectWon monorepo (Nx + pnpm)",
  "type": "module",
  "author": "Shiwoo Min",
  "license": "ISC",
  "engines": {
    "node": ">=20.11.0"
  },
  "engineStrict": true,
  "packageManager": "pnpm@10.7.0",
  "scripts": {
    "prepare": "husky install",
    "nx": "nx",
    "graph": "nx graph",
    "build": "nx run-many -t build",
    "dev": "nx run-many -t dev --parallel",
    "lint": "nx run-many -t lint --parallel",
    "test": "nx run-many -t test --parallel",
    "affected:lint": "nx affected -t lint --parallel",
    "affected:test": "nx affected -t test --parallel",
    "affected:build": "nx affected -t build --parallel",
    "e2e": "nx run e2e:test",
    "format": "prettier --write \"**/*.{ts,tsx,js,json}\"",
    "lint:fix": "eslint --ext .ts,.tsx . --fix",
    "commit": "cz"
  },
"devDependencies": {
  "nx": "^19.5.0",
  "@nx/eslint-plugin": "^19.5.0",
  "@typescript-eslint/eslint-plugin": "^8.29.1",
  "@typescript-eslint/parser": "^8.29.1",
  "@types/node": "^24.3.0",
  "eslint": "^9.24.0",
  "eslint-config-prettier": "^10.1.2",
  "eslint-plugin-import": "^2.31.0",
  "eslint-plugin-prettier": "^5.2.6",
  "eslint-plugin-unused-imports": "^3.2.0",
  "eslint-plugin-simple-import-sort": "^12.1.1",
  "prettier": "^3.5.3",
  "husky": "^9.1.7",
  "lint-staged": "^15.5.1",
  "typescript": "^5.4.0",
  "ts-node": "^10.9.2",
  "tsx": "^4.19.3",
  "tsconfig-paths": "^4.2.0",
  "@playwright/test": "^1.51.1",
  "supertest": "^7.1.0",
  "msw": "^2.7.4",
  "cz-customizable": "^7.4.0",
  "commitizen": "^4.3.1",
  "changesets": "^2.27.8",
  "concurrently": "^9.1.2",
  "dotenv-cli": "^7.4.2"
},
  "lint-staged": {
    "*.{ts,tsx,js,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.cjs"
    }
  }
}
