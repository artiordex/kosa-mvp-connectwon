    "allowJs": true,

    // ê²½ë¡œ alias - ì‹¤ì œ êµ¬ì¡°ì— ë§ê²Œ ìˆ˜ì •
    "baseUrl": ".",
    "paths": {
      // ì•±ë“¤
      "@apps/*": ["apps/*/src"],
